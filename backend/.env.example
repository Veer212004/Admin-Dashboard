NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/mean-admin-dashboard

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Email Configuration
# Option 1: Mailgun (recommended for production - works on Render)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=your_mailgun_domain_here
EMAIL_FROM=Admin Dashboard <noreply@your_mailgun_domain_here>

# Option 2: SMTP (for localhost development only - blocked on Render)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_gmail_app_password
# EMAIL_FROM=noreply@meandashboard.local

# Frontend URL
FRONTEND_URL=http://localhost:4200

# Socket.io
SOCKET_PATH=/socket.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/oauth/google/callback
