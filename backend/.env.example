NODE_ENV=development
PORT=5000

# MongoDB
MONGO_URI=mongodb://localhost:27017/mean-admin-dashboard

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_in_production
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Email/SMTP Configuration
# Note: SMTP may not work on cloud platforms like Render due to port blocking
# For production, consider using an email API service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password
EMAIL_FROM=noreply@meandashboard.local

# Frontend URL
FRONTEND_URL=http://localhost:4200

# Socket.io
SOCKET_PATH=/socket.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/oauth/google/callback
